# DraftCrane Environment Variables
# Copy to .env and fill in values

# ──────────────────────────────────────────
# Clerk Authentication
# ──────────────────────────────────────────
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# ──────────────────────────────────────────
# Google OAuth (Drive integration)
# ──────────────────────────────────────────
GOOGLE_CLIENT_ID=...apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-...
GOOGLE_REDIRECT_URI=https://dc-api.<account>.workers.dev/drive/callback

# ──────────────────────────────────────────
# AI Provider (OpenAI)
# ──────────────────────────────────────────
AI_API_KEY=sk-...
AI_MODEL=gpt-4o
AI_DEFAULT_TIER=frontier

# ──────────────────────────────────────────
# Cloudflare Browser Rendering (PDF export)
# ──────────────────────────────────────────
CF_ACCOUNT_ID=...
CF_API_TOKEN=...

# ──────────────────────────────────────────
# Application
# ──────────────────────────────────────────
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8787
ENCRYPTION_KEY=... # 32-byte hex string for AES-256-GCM token encryption

